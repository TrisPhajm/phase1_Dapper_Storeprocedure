
@{
    ViewData["Title"] = "Student Grade";
}
@model StudentGradeModel
<script src="~/lib/jquery/dist/jquery.js"></script>
<h1 class="text-danger">@ViewData["Title"]</h1>
<h3> Name :  @Model.student.Name</h3>
<br>
<h5> Id : @Model.student.Id</h5>
<table id="StudentGradeTable" class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th> Id </th>
            <th> Subject </th>
            <th> Grade </th>
        </tr>
    </thead>
    <tbody>
        @if (!@Model.Empty)
        {
            @foreach (var item in @Model.student_grade_list)
            {
                <tr class="text-center font-weight-bold">
                    <td>@item.Id</td>
                    <td>@item.SubjectName</td>
                    <td>@item.Grade</td>
                </tr>
            }
        }
    </tbody>
</table>
